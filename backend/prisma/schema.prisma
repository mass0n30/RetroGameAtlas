generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model User {
  id          Int          @id @default(autoincrement())
  email       String       @unique
  is_admin    Boolean      @default(false)
  fname       String
  lname       String
  alias       String
  password    String
  UserProfile UserProfile?
}

model UserProfile {
  id         Int    @id @default(autoincrement())
  userId     Int    @unique
  user       User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  savedGames Game[] @relation("UserSavedGames")
  completedGames Game[] @relation("UserCompletedGames")
}

model Game {
  id               Int           @id @default(autoincrement())
  name             String
  slug             String        @unique
  summary          String?
  storyline        String?
  firstReleaseDate DateTime?
  coverUrl         String?
  rating           Float?
  aggregatedRating Float?
  totalRating      Float?
  totalRatingCount Int?
  url              String?
  igdbId           Int           @unique
  originalPlatform String?
  ageRatingId      Int?
  developerId      Int?
  covers           Cover[]
  ageRating        GameRating?   @relation("GameRatingRelation", fields: [ageRatingId], references: [id], onDelete: Cascade)
  developer        Developers?   @relation("GameDevelopers", fields: [developerId], references: [id])
  screenshots      Screenshot[]
  genres           Genre[]       @relation("GameGenres")
  platforms        Platform[]    @relation("GamePlatforms")
  savedByUsers     UserProfile[] @relation("UserSavedGames")
  completedByUsers UserProfile[] @relation("UserCompletedGames")
}

model GameRating {
  id          Int     @id
  rating      String
  description String?
  games       Game[]  @relation("GameRatingRelation")
}

model Platform {
  id           Int     @id
  name         String  @unique
  abbreviation String?
  displayabbrev String?
  generation   Int?
  slug         String
  platformLogo String?
  releaseOrder Int?    @unique
  games        Game[]  @relation("GamePlatforms")
}

model Developers {
  id      Int     @id
  name    String?
  logoUrl String?
  country String?
  games   Game[]  @relation("GameDevelopers")
}

model Genre {
  id     Int     @id @default(autoincrement())
  name   String?
  slug   String?
  igdbId Int     @unique
  games  Game[]  @relation("GameGenres")
}

model Cover {
  id      Int     @id @default(autoincrement())
  imageId String?
  url     String?
  igdbId  Int     @unique
  gameId  Int
  height  Int?
  width   Int?
  game    Game    @relation(fields: [gameId], references: [id], onDelete: Cascade)
}

model Screenshot {
  id      Int     @id @default(autoincrement())
  imageId String?
  url     String?
  gameId  Int
  height  Int?
  width   Int?
  igdbId  Int     @unique
  game    Game    @relation(fields: [gameId], references: [id], onDelete: Cascade)
}
